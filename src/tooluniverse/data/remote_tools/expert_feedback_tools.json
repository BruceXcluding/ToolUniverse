                        },
                        "total_requests": {
                            "type": "integer",
                            "description": "Total number of consultation requests"
                        },
                        "completed_responses": {
                            "type": "integer",
                            "description": "Number of completed expert responses"
                        },
                        "response_rate": {
                            "type": "number",
                            "description": "Percentage of requests that received responses"
                        }
                    }
                },
                "system_time": {
                    "type": "string",
