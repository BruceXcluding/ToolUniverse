[
    {
        "type": "RemoteTool",
        "name": "mcp_auto_loader_human_expert",
        "description": "Automatically discover and load all tools from Human Expert MCP Server. Can register discovered tools as individual ToolUniverse tools for expert consultation in complex scientific decisions requiring human judgment.",
        "parameter": {
            "type": "object",
            "properties": {}
        },
        "remote_info": {
            "server_type": "MCP",
            "transport": "http",
            "original_type": "MCPAutoLoaderTool",
            "url": "https://mims-harvard.github.io/tooluniverse/expand_tooluniverse/remote/expert_feedback.html",
            "code_url": "https://github.com/mims-harvard/bioagent/tree/main/ToolUniverse/src/tooluniverse/remote/expert_feedback",
            "tool_prefix": "expert_"
        }
    },
    {
        "type": "RemoteTool",
        "name": "consult_human_expert",
        "description": "Consult a human expert for complex scientific questions requiring human judgment. This tool submits questions to human experts who can provide clinical decision support, analysis validation, treatment recommendations, and specialized opinions.",
        "parameter": {
            "type": "object",
            "properties": {
                "question": {
                    "type": "string",
                    "description": "The scientific question or case requiring expert consultation"
                },
                "specialty": {
                    "type": "string",
                    "description": "Area of expertise needed (e.g., 'cardiology', 'oncology', 'pharmacology', 'neurology', 'emergency', 'general')",
                    "default": "general"
                },
                "priority": {
                    "type": "string",
                    "enum": ["low", "normal", "high", "urgent"],
                    "description": "Request priority level",
                    "default": "normal"
                },
                "context": {
                    "type": "string",
                    "description": "Additional context or background information about the case",
                    "default": ""
                },
                "timeout_minutes": {
                    "type": "integer",
                    "description": "How long to wait for expert response (default: 5 minutes)",
                    "default": 5,
                    "minimum": 1,
                    "maximum": 60
                }
            },
            "required": ["question"]
        },
        "return_schema": {
            "type": "object",
            "description": "Expert consultation response with clinical recommendations",
            "properties": {
                "status": {
                    "type": "string",
                    "enum": ["completed", "timeout", "error"],
                    "description": "Status of the expert consultation"
                },
                "expert_response": {
                    "type": "string",
                    "description": "The expert's clinical response and recommendations"
                },
                "expert_name": {
                    "type": "string",
                    "description": "Name of the responding expert"
                },
                "response_time": {
                    "type": "string",
                    "description": "Timestamp when the expert responded"
                },
                "request_id": {
                    "type": "string",
                    "description": "Unique identifier for the consultation request"
                },
                "specialty": {
                    "type": "string",
                    "description": "Medical specialty area of the consultation"
                },
                "priority": {
                    "type": "string",
                    "description": "Priority level of the request"
                }
            }
        },
        "remote_info": {
            "server_type": "MCP",
            "transport": "http",
            "original_type": "MCPClientTool",
            "url": "https://mims-harvard.github.io/tooluniverse/expand_tooluniverse/remote/expert_feedback.html",
            "code_url": "https://github.com/mims-harvard/bioagent/tree/main/ToolUniverse/src/tooluniverse/remote/expert_feedback",
            "mcp_tool_name": "consult_human_expert"
        }
    },
    {
        "type": "RemoteTool",
        "name": "get_expert_response",
        "description": "Check if an expert response is available for a previous consultation request. Use this to retrieve responses when the initial consultation is complete.",
        "parameter": {
            "type": "object",
            "properties": {
                "request_id": {
                    "type": "string",
                    "description": "The ID of the expert consultation request to check"
                }
            },
            "required": ["request_id"]
        },
        "return_schema": {
            "type": "object",
            "description": "Expert response status and content if available",
            "properties": {
                "status": {
                    "type": "string",
                    "enum": ["completed", "pending", "not_found", "error"],
                    "description": "Status of the consultation request"
                },
                "expert_response": {
                    "type": "string",
                    "description": "The expert's response (if completed)"
                },
                "expert_name": {
                    "type": "string",
                    "description": "Name of the responding expert (if completed)"
                },
                "response_time": {
                    "type": "string",
                    "description": "Timestamp of expert response (if completed)"
                },
                "request_id": {
                    "type": "string",
                    "description": "The consultation request ID"
                },
                "message": {
                    "type": "string",
                    "description": "Status message or error description"
                }
            }
        },
        "remote_info": {
            "server_type": "MCP",
            "transport": "http",
            "original_type": "MCPClientTool",
            "url": "https://mims-harvard.github.io/tooluniverse/expand_tooluniverse/remote/expert_feedback.html",
            "code_url": "https://github.com/mims-harvard/bioagent/tree/main/ToolUniverse/src/tooluniverse/remote/expert_feedback",
            "mcp_tool_name": "get_expert_response"
        }
    },
    {
        "type": "RemoteTool",
