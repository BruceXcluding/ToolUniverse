                            },
                            "description": "Expert's areas of specialization"
                        },
                        "availability": {
                            "type": "boolean",
                            "description": "Whether the expert is currently available"
                        }
                    }
                },
                "statistics": {
                    "type": "object",
                    "description": "System usage statistics",
                    "properties": {
                        "pending_requests": {
                            "type": "integer",
