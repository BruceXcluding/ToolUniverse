                }
            }
        },
        "remote_info": {
            "server_type": "MCP",
            "transport": "http",
            "original_type": "MCPClientTool",
            "url": "https://mims-harvard.github.io/tooluniverse/expand_tooluniverse/remote/expert_feedback.html",
